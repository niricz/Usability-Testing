{
    "name": "Bookshop",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap-cloud-sdk/http-client": "^2.10.0",
        "@sap-cloud-sdk/util": "^2.10.0",
        "@sap/artifact-management": "^1.16.4",
        "@sap/cds": "^6",
        "@sap/low-code-event-handler": "^1.1.1",
        "@sap/xsenv": "^3.4.0",
        "@sap/xssec": "^3.2.14",
        "express": "^4",
        "hdb": "^0.19.5",
        "passport": "^0.6.0"
    },
    "devDependencies": {
        "sqlite3": "^5.0.4"
    },
    "scripts": {
        "start": "cds run"
    },
    "engines": {
        "node": "^16.15"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "[production]": {
                "db": {
                    "kind": "hana-cloud"
                }
            },
            "db": {
                "kind": "sql"
            },
            "app-service": {
                "impl": "@sap/low-code-event-handler"
            },
            "auth": {
                "kind": "xsuaa"
            }
        }
    },
    "lcap": true
}
